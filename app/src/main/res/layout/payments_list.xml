<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/p_category_iv"
        android:layout_marginRight="16dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/payment_label_tv"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/p_category_iv"
        android:layout_alignBottom="@+id/p_category_iv"
        android:layout_alignParentTop="true"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/payment_amount_tv"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/payment_label_tv"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/payment_label_tv"
        android:textAlignment="viewEnd"
        android:layout_marginRight="16dp"
        android:gravity="center" />

</RelativeLayout>